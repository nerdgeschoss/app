= c.container
  = c.stack
    = c.headline
      = t ".hello", name: current_user.display_name
    - if @sprint
      = render @sprint
    = c.columns
      - if @upcoming_leaves.any?
        = c.card icon: "🏝", title: t(".upcoming_holidays") do |slot|
          - slot.subtitle
            = c.stack :mini
              - @upcoming_leaves.each do |leave|
                div = "#{date_range leave.leave_during.min, leave.leave_during.max}: #{leave.title}"
      - if @payslips.any?
        = c.card icon: "💸", title: t(".last_payments"), context: link_to(t(".archive"), payslips_path) do |slot|
          - slot.subtitle
            = c.stack :mini
              - @payslips.each do |payslip|
                a href=image_file_url(payslip.pdf) target="_blank" = l payslip.month, format: :month_year
      = c.card icon: "⏰", title: t(".remaining_holidays", year: Date.today.year), subtitle: current_user.remaining_holidays
        div some content
