= form_with model: feedback do |f|
  .stack
    .line
      strong = f.label :retro_rating
      .select = f.collection_select :retro_rating, SprintFeedback::POSSIBLE_RATINGS.each_with_object({}) { |e, hash| hash["#{e}"] = e }, :second, :first, prompt: t(".please_rate"), required: true
    = f.label :retro_text
    .text-area = f.text_area :retro_text, placeholder: t(".went_well"), rows: 8, required: true
    span = f.submit class: :button
