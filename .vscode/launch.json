{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "RSpec File",
      "request": "launch",
      "command": "bin/rspec",
      "script": "${file}",
      "askParameters": false,
      "useTerminal": true,
      "presentation": {
        "group": "2_test"
      }
    },
    {
      "type": "rdbg",
      "name": "Rails",
      "request": "launch",
      "command": "bin/rails",
      "script": "server",
      "args": [],
      "askParameters": false,
      "useBundler": true,
      "localfs": true,
      "useTerminal": true
    },
    {
      "type": "rdbg",
      "name": "Sidekiq",
      "request": "launch",
      "command": "bin/sidekiq",
      "script": "start",
      "args": [],
      "askParameters": false,
      "useBundler": true,
      "localfs": true,
      "useTerminal": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Assets",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["build:watch"],
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Run App",
      "configurations": ["Rails", "Sidekiq", "Assets"],
      "stopAll": true,
      "presentation": {
        "group": "1_dev",
        "order": 1
      }
    }
  ]
}
